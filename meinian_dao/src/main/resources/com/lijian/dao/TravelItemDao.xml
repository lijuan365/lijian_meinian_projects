<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lijian.dao.TravelItemDao">
    <insert id="add" parameterType="TravelItem"> <!--由于已经设置了别名包，可以直接省略包名，直接写类名首字母小写-->
        insert into t_travelitem(code, name, sex, age, price, type, remark, attention)values( #{code}, #{name}, #{sex},
        #{age}, #{price}, #{type}, #{remark}, #{attention})
    </insert>

    <!-- Page findPage(String queryString)   -->
    <select id="findPage" parameterType="string" resultType="travelItem">
        select * from t_travelitem
        <where>
            <if test="value!=null and value.length>0">  <!--必须使用value获取简单的参数，或者指定@param获取参数也是可以的-->
                code = #{value} or name like '%'#{value}'%'
            </if>
        </where>
    </select>

    <delete id="delete" parameterType="integer">
        delete from t_travelitem where id = #{id}
    </delete>

    <select id="findById" parameterType="integer" resultType="travelItem">
        select id,code,name,sex,age,price,type,remark,attention from t_travelitem where id=#{id}
    </select>

    <update id="edit" parameterType="travelItem">
        update t_travelitem
        <set>
            <if test="code!=null and code.length>0">
                code = #{code},
            </if>
            <if test="name!=null and name.length >0">
                `name` = #{name},
            </if>
            <if test="sex!=null and sex.length>0">
                sex = #{sex},
            </if>
            <if test="age!=null and age.length>0">
                age = #{age},
            </if>
            <if test="price!=null">
                price = #{price},
            </if>
            <if test="type!=null and type.length>0">
                `type` = #{type},
            </if>
            <if test="remark!=null and remark.length>0">
                remark = #{remark},
            </if>
            <if test="attention!=null and attention.length>0">
                attention = #{attention}
            </if>
        </set>
        where id = #{id}
    </update>


    <!--跟团游模块中查找所有自由行的内容-->
    <select id="findAll" resultType="travelItem">
           select id,code,name,sex,age,price,type,remark,attention from t_travelitem
    </select>

    <!--根据跟团游id查询自由行信息-->
    <select id="findTravelItemListById" resultType="travelItem" parameterType="int">
    select * from t_travelitem where id in (select travelitem_id from t_travelgroup_travelitem where travelgroup_id=#{id})
   </select>

</mapper>